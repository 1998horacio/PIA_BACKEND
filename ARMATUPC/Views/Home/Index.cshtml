    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Tienda de Tecnología - ARMATUPC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/css/bootstrap.min.css">
    <style>
        /* Estilos CSS para el carrito de compras */
        .carrito {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: #f1f1f1;
