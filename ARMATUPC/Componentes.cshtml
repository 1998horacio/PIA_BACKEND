@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Tienda de Tecnología - ARMATUPC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/css/bootstrap.min.css">
    <style>
        /* Estilos CSS para el carrito de compras */
        .carrito {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: #f1f1f1;
            padding: 10px;
        }

        .categoria-item {
            padding: 20px;
            text-align: center;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .componente-item {
            text-align: center;
            border: 1px solid #f1f1f1;
            border-radius: 5px;
            padding: 20px;
        }

            .componente-item img {
                max-width: 200px;
                max-height: 200px;
            }
    </style>
</head>
<body>
    <!-- Cabecera de la página -->
    <div class="carrito">
        <a href="Carrito.html">
            <img src="https://cdn-icons-png.flaticon.com/512/107/107831.png" alt="Carrito de compras" width="30" height="30">
        </a>
    </div>

    <!-- Contenido de la página principal -->
    <div class="container">
        <h1>Bienvenido a ARMATUPC - Tu tienda de tecnología</h1>

        <h2>Componentes</h2>

        <div class="row">
            <div class="col-md-4">
                <div class="componente-item">
                    <img src="URL_IMAGEN_COMPONENTE" alt="Componente 1">
                    <h3>Descripción del componente 1</h3>
                    <p>Precio: $100</p>
                    <button class="btn btn-primary">Agregar al carrito</button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="componente-item">
                    <img src="URL_IMAGEN_COMPONENTE" alt="Componente 2">
                    <h3>Descripción del componente 2</h3>
                    <p>Precio: $200</p>
                    <button class="btn btn-primary">Agregar al carrito</button>
                </div>
            </div>

            <!-- Agrega más columnas para más componentes -->

        </div>
    </div>
</body>
</html>
